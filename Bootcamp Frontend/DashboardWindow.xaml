<Window x:Class="Bootcamp_Frontend.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="InvenPro - Panel de Control" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F5F5F5">
    
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryGreen" Color="#00A878"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#7FDED7"/>
        <SolidColorBrush x:Key="LightBackground" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="DarkText" Color="#333333"/>
        <SolidColorBrush x:Key="LightText" Color="#999999"/>
        
        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryGreen}"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8F8F4"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="DashboardCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Border Grid.Column="0" Background="{StaticResource PrimaryGreen}">
            <StackPanel>
                <Viewbox Width="140" Height="70" Margin="20,30,20,40">
                    <Canvas Width="180" Height="80">
                        <TextBlock Text="InvPro" FontSize="42" FontWeight="Bold" 
                                 Foreground="White" Canvas.Left="0" Canvas.Top="10"/>
                        <Path Data="M 140,20 L 160,10 L 180,20 L 180,40 L 160,50 L 140,40 Z M 160,10 L 160,30" 
                              Stroke="White" StrokeThickness="3" Fill="Transparent"/>
                        <TextBlock Text="gestor" FontSize="14" Foreground="#7FDED7" 
                                 Canvas.Left="15" Canvas.Top="55"/>
                    </Canvas>
                </Viewbox>
                
                <TextBlock Text="Gestion Inteligente" 
                         FontSize="16" 
                         FontWeight="SemiBold"
                         Foreground="White" 
                         TextAlignment="Center"
                         Margin="0,0,0,40"/>
                
                <Button Style="{StaticResource SidebarButton}">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M 5,0 L 15,0 L 20,5 L 20,20 L 0,20 L 0,5 Z M 5,0 L 5,5 L 0,5" 
                              Fill="{StaticResource PrimaryGreen}" 
                              Width="20" Height="20" 
                              Stretch="Uniform"
                              Margin="0,0,12,0"/>
                        <StackPanel>
                            <TextBlock Text="Importar Productos" FontWeight="SemiBold" FontSize="13"/>
                            <TextBlock Text="Archivo CSV/Excel" Foreground="{StaticResource LightText}" FontSize="11"/>
                        </StackPanel>
                    </StackPanel>
                </Button>
                
                <Button Style="{StaticResource SidebarButton}">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M 5,0 L 15,0 L 20,5 L 20,20 L 0,20 L 0,5 Z M 5,0 L 5,5 L 0,5" 
                              Fill="{StaticResource PrimaryGreen}" 
                              Width="20" Height="20" 
                              Stretch="Uniform"
                              Margin="0,0,12,0"/>
                        <StackPanel>
                            <TextBlock Text="Importar Movimientos" FontWeight="SemiBold" FontSize="13"/>
                            <TextBlock Text="Archivo CSV/Excel" Foreground="{StaticResource LightText}" FontSize="11"/>
                        </StackPanel>
                    </StackPanel>
                </Button>
                
                <Button Style="{StaticResource SidebarButton}">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M 10,2 L 10,8 M 2,10 L 18,10 M 10,12 L 10,18 M 10,0 L 20,10 L 10,20 L 0,10 Z" 
                              Stroke="{StaticResource PrimaryGreen}" 
                              StrokeThickness="2"
                              Width="20" Height="20" 
                              Stretch="Uniform"
                              Margin="0,0,12,0"/>
                        <StackPanel>
                            <TextBlock Text="Exportar Productos" FontWeight="SemiBold" FontSize="13"/>
                            <TextBlock Text="Descargar CSV" Foreground="{StaticResource LightText}" FontSize="11"/>
                        </StackPanel>
                    </StackPanel>
                </Button>
                
                <Button Style="{StaticResource SidebarButton}">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M 10,2 L 10,8 M 2,10 L 18,10 M 10,12 L 10,18 M 10,0 L 20,10 L 10,20 L 0,10 Z" 
                              Stroke="{StaticResource PrimaryGreen}" 
                              StrokeThickness="2"
                              Width="20" Height="20" 
                              Stretch="Uniform"
                              Margin="0,0,12,0"/>
                        <StackPanel>
                            <TextBlock Text="Exportar Movimientos" FontWeight="SemiBold" FontSize="13"/>
                            <TextBlock Text="Descargar CSV" Foreground="{StaticResource LightText}" FontSize="11"/>
                        </StackPanel>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
        
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,30">
                <TextBlock Text="Panel de Control" 
                         FontSize="36" 
                         FontWeight="Bold" 
                         Foreground="{StaticResource DarkText}"
                         Margin="0,0,0,10"/>
                
                <TextBlock Text="Administra tu inventario de forma eficiente" 
                         FontSize="16" 
                         Foreground="{StaticResource PrimaryGreen}"
                         Margin="0,0,0,40"/>
                
                <UniformGrid Columns="3" Rows="2">
                    <Border Style="{StaticResource DashboardCard}">
                        <StackPanel>
                            <Border Width="60" Height="60" 
                                    Background="#E8F8F4" 
                                    CornerRadius="30"
                                    Margin="0,0,0,20">
                                <Path Data="M 10,5 L 10,15 M 5,10 L 15,10" 
                                      Stroke="{StaticResource PrimaryGreen}" 
                                      StrokeThickness="3"
                                      Width="24" Height="24" 
                                      Stretch="Uniform"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                            
                            <TextBlock Text="Anadir Producto" 
                                     FontSize="20" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource DarkText}"
                                     Margin="0,0,0,10"/>
                            
                            <TextBlock Text="Registra un nuevo producto en el inventario" 
                                     FontSize="14" 
                                     Foreground="{StaticResource LightText}"
                                     TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Style="{StaticResource DashboardCard}">
                        <StackPanel>
                            <Border Width="60" Height="60" 
                                    Background="#FFE8E8" 
                                    CornerRadius="30"
                                    Margin="0,0,0,20">
                                <Path Data="M 3,3 L 17,17 M 3,17 L 17,3" 
                                      Stroke="#E74C3C" 
                                      StrokeThickness="3"
                                      Width="24" Height="24" 
                                      Stretch="Uniform"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                            
                            <TextBlock Text="Eliminar Producto" 
                                     FontSize="20" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource DarkText}"
                                     Margin="0,0,0,10"/>
                            
                            <TextBlock Text="Retira un producto del inventario" 
                                     FontSize="14" 
                                     Foreground="{StaticResource LightText}"
                                     TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Style="{StaticResource DashboardCard}">
                        <StackPanel>
                            <Border Width="60" Height="60" 
                                    Background="#E8F0FF" 
                                    CornerRadius="30"
                                    Margin="0,0,0,20">
                                <Path Data="M 2,8 L 2,18 L 18,18 L 18,8 M 6,8 L 6,4 L 14,4 L 14,8 M 8,11 L 12,11" 
                                      Stroke="#3498DB" 
                                      StrokeThickness="2"
                                      Width="24" Height="24" 
                                      Stretch="Uniform"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                            
                            <TextBlock Text="Consultar Stock" 
                                     FontSize="20" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource DarkText}"
                                     Margin="0,0,0,10"/>
                            
                            <TextBlock Text="Verifica el stock de un producto" 
                                     FontSize="14" 
                                     Foreground="{StaticResource LightText}"
                                     TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Style="{StaticResource DashboardCard}">
                        <StackPanel>
                            <Border Width="60" Height="60" 
                                    Background="#FFF4E8" 
                                    CornerRadius="30"
                                    Margin="0,0,0,20">
                                <Path Data="M 5,2 L 15,2 L 15,7 L 18,7 L 10,15 L 2,7 L 5,7 Z" 
                                      Fill="#F39C12" 
                                      Width="24" Height="24" 
                                      Stretch="Uniform"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                            
                            <TextBlock Text="Modificar Stock" 
                                     FontSize="20" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource DarkText}"
                                     Margin="0,0,0,10"/>
                            
                            <TextBlock Text="Actualiza la cantidad de productos" 
                                     FontSize="14" 
                                     Foreground="{StaticResource LightText}"
                                     TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Style="{StaticResource DashboardCard}">
                        <StackPanel>
                            <Border Width="60" Height="60" 
                                    Background="#F0E8FF" 
                                    CornerRadius="30"
                                    Margin="0,0,0,20">
                                <Path Data="M 3,8 L 17,8 M 3,12 L 17,12 M 3,16 L 17,16 M 7,8 L 7,4 M 13,8 L 13,4" 
                                      Stroke="#9B59B6" 
                                      StrokeThickness="2"
                                      Width="24" Height="24" 
                                      Stretch="Uniform"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                            
                            <TextBlock Text="Consultar Inventario" 
                                     FontSize="20" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource DarkText}"
                                     Margin="0,0,0,10"/>
                            
                            <TextBlock Text="Ver todos los productos registrados" 
                                     FontSize="14" 
                                     Foreground="{StaticResource LightText}"
                                     TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Style="{StaticResource DashboardCard}">
                        <StackPanel>
                            <Border Width="60" Height="60" 
                                    Background="#E8F8F8" 
                                    CornerRadius="30"
                                    Margin="0,0,0,20">
                                <Path Data="M 2,2 L 18,2 L 18,18 L 2,18 Z M 2,7 L 18,7 M 7,2 L 7,18 M 10,10 L 14,10 M 10,13 L 14,13" 
                                      Stroke="#16A085" 
                                      StrokeThickness="2"
                                      Width="24" Height="24" 
                                      Stretch="Uniform"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                            
                            <TextBlock Text="Repositorio de Movimientos" 
                                     FontSize="20" 
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource DarkText}"
                                     Margin="0,0,0,10"/>
                            
                            <TextBlock Text="Historial de entradas y salidas" 
                                     FontSize="14" 
                                     Foreground="{StaticResource LightText}"
                                     TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
