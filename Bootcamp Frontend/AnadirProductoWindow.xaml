<Window x:Class="Bootcamp_Frontend.AnadirProductoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InvenPro - Anadir Producto" 
        Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Border Background="White" Margin="20" CornerRadius="10" Padding="30">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Anadir Producto" 
                     FontSize="28" 
                     FontWeight="Bold" 
                     Foreground="#333333"
                     HorizontalAlignment="Center"
                     Margin="0,0,0,30"/>
            
            <TextBlock Text="Aqui ira el formulario para registrar productos" 
                     FontSize="14" 
                     Foreground="#999999"
                     HorizontalAlignment="Center"
                     Margin="0,0,0,20"/>
            
            <Button Content="Cerrar" 
                    Width="120" 
                    Height="40"
                    Background="#00A878"
                    Foreground="White"
                    FontSize="14"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="Cerrar_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#009268"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Border>
</Window>
