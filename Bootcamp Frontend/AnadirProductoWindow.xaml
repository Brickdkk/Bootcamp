<Window x:Class="Bootcamp_Frontend.AnadirProductoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InvenPro - Anadir Producto" 
        Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Border Background="White" Margin="20" CornerRadius="10" Padding="30">
        <StackPanel>
            <TextBlock Text="Anadir Producto" FontSize="24" FontWeight="Bold" Foreground="#333" Margin="0,0,0,20"/>
            
            <TextBlock Text="SKU:" Margin="0,0,0,5"/>
            <TextBox x:Name="SkuTextBox" Height="35" FontSize="14" Margin="0,0,0,15"/>
            
            <TextBlock Text="Nombre:" Margin="0,0,0,5"/>
            <TextBox x:Name="NombreTextBox" Height="35" FontSize="14" Margin="0,0,0,15"/>
            
            <TextBlock Text="Stock:" Margin="0,0,0,5"/>
            <TextBox x:Name="StockTextBox" Height="35" FontSize="14" Margin="0,0,0,15"/>
            
            <TextBlock Text="Precio:" Margin="0,0,0,5"/>
            <TextBox x:Name="PrecioTextBox" Height="35" FontSize="14" Margin="0,0,0,20"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Guardar" Width="100" Height="40" Background="#00A878" Foreground="White" Margin="5" Click="Guardar_Click"/>
                <Button Content="Cerrar" Width="100" Height="40" Background="#999" Foreground="White" Margin="5" Click="Cerrar_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
